{
  "name": "gmail-cleaner",
  "version": "2.0.0",
  "description": "Gmail Newsletter Cleaner - Unsubscribe & Clean in Style",
  "main": "electron/main.js",
  "scripts": {
    "setup": "node scripts/setup-credentials.js",
    "create-icons": "node scripts/create-icons.js",
    "prepare-icon": "echo 'Vedi scripts/prepare-icon.md per preparare la tua icona'",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "cross-env ELECTRON_START_URL=true electron .",
    "build": "react-scripts build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps && npm run setup && npm run create-icons"
  },
  "keywords": ["gmail", "cleaner", "unsubscribe", "newsletter", "electron", "react"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.300.0",
    "recharts": "^2.10.0",
    "googleapis": "^130.0.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.yourcompany.gmailcleaner",
    "productName": "Gmail Cleaner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}